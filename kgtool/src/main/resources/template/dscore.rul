}
where {
    graph ?shape {
        ?sh sh:constraint ?sn 
        ?sn sh:not ?cst        
    }

    bind (! st:testShape(?shape, ?cst, ?s) as ?suc)

    bind (st:report(sh:not, ?sn, ?shape, ?s,  ?suc, ?vis) as ?b)
  
}

